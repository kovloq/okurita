<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-6">
                <h3>News</h3>
                <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                <li class="breadcrumb-item">News</li>
              </ol>
            </div>
        </div>
    </div>
</div>

<% if notice.present? %>
<div class="alert alert-success" role="alert">
<%= notice %>
</div>
<% end %>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                  <% if @news.present? %>
                  <table class="table table-bordered ">
                    <thead>
                      <tr>
                        <th>Title</th>
                        <th>Content</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>
                   
                    <tbody>
                      <% @news.each do |row| %>
                        <tr>
                          <td><%= row.title %></td>
                          <td><%= row.content %></td>
                          <td><%= link_to "Show", admin_news_path(row.id) %></td>
                          <td><%= link_to "Edit", edit_admin_news_path(row.id) %></td>
                          <td><%= link_to "Destroy", admin_news_path(row.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <%= paginate @news %>
                  <% end %>
                </div>
            </div>
          <%= link_to "New News", new_admin_news_path, class: "btn btn-primary" %>
        </div>
    </div>
</div>