<h1>Listing News</h1>



<% if @news.present? %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @news.each do |row| %>
      <tr>
        <td><%= row.title %></td>
        <td><%= row.content %></td>
        <td><%= link_to "Show", admin_news_path(row.id) %></td>
        <td><%= link_to "Edit", edit_admin_news_path(row.id) %></td>
        <td><%= link_to "Destroy", admin_news_path(row.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
 
<%= link_to "New News", new_admin_news_path %>