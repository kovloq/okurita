<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-6">
                <h3>FAQ</h3>
                <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <%= link_to admin_path do %>
                      <i data-feather="home"></i>
                    <% end %> 
                <li class="breadcrumb-item">FAQ</li>
              </ol>
            </div>
        </div>
    </div>
</div>

<% if notice.present? %>
<div class="alert alert-success" role="alert">
<%= notice %>
</div>
<% end %>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                  <% if @faqs.present? %>
                  <table class="table table-bordered ">
                    <thead>
                      <tr>
                        <th>Question</th>
                        <th>Answer</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>
                   
                    <tbody>
                      <% @faqs.each do |row| %>
                        <tr>
                          <td><%= row.question %></td>
                          <td><%= row.answer %></td>
                          <td><%= link_to "Show", admin_faq_path(row.id) %></td>
                          <td><%= link_to "Edit", edit_admin_faq_path(row.id) %></td>
                          <td><%= link_to "Destroy", admin_faq_path(row.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <%= paginate @faqs %>
                  <% end %>
                </div>
            </div>
          <%= link_to "New FAQ", new_admin_faq_path, class: "btn btn-primary" %>
        </div>
    </div>
</div>