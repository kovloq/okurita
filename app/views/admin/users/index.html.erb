<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-6">
                <h3>User</h3>
                <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                <li class="breadcrumb-item">User</li>
              </ol>
            </div>
        </div>
    </div>
</div>
<p id="notice"><%= notice %></p>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <% if @users.present? %>
                    <table class="table table-bordered ">
                        <tr>
                            <th>Name</th>        
                            <th>Email</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        
                        <% @users.each do |t| %>
                            <tr>
                                <td><%= t.name %></td>
                                
                                <td><%= t.email %></td>
                                <td>
                                    <td><%= link_to "Edit", edit_admin_user_path(t.id) %></td>
                                </td>
                                <td><%= link_to "Destroy", admin_user_path(t.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
                            </tr>
                        <% end %>
                    </table>
                    <%= paginate @users %>

                    <% end %>
                     
                    <%= link_to "New user", new_admin_user_path %>
                </div>
            </div>
        </div>
    </div>
</div>
