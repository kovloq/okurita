<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-6">
                <h3>Refund</h3>
                <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <%= link_to admin_path do %>
                    <i data-feather="home"></i>
                  <% end %> 
                </li>
                <li class="breadcrumb-item">Refund</li>
              </ol>
            </div>
        </div>
    </div>
</div>

<% if notice.present? %>
<div class="alert alert-success" role="alert">
<%= notice %>
</div>
<% end %>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                  <% if @refunds.present? %>
                  <table class="table table-bordered ">
                    <thead>
                      <tr>
                        <th>User</th>
                        <th>Amount</th>
                        <th>Is Active</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>
                   
                    <tbody>
                      <% @refunds.each do |row| %>
                        <tr>
                          <td><%= row.user_id %></td>
                          <td><%= row.amount %></td>
                          <td><%= row.is_active %></td>
                          <td><%= link_to "Show", admin_refund_path(row.id) %></td>
                          <td><%= link_to "Edit", edit_admin_refund_path(row.id) %></td>
                          <td><%= link_to "Destroy", admin_refund_path(row.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <%= paginate @refunds %>
                  <% end %>
                </div>
            </div>
          <%= link_to "New Refund", new_admin_refund_path, class: "btn btn-primary" %>
        </div>
    </div>
</div>