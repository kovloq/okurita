<h1>Listing Users</h1>
<% if @users.present? %>
<table class="table table-bordered ">
    <tr>
        <th>Name</th>        
        <th>Email</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    
    <% @users.each do |t| %>
        <tr>
            <td><%= t.name %></td>
            
            <td><%= t.email %></td>
            <td>
                <%= link_to "Edit",{:controller=>"user",:action=>"edit",:id=>t.id},:class=>"btn btn-warning" %>

                
            </td>
            <td><%= link_to "Delete",{ :controller=>"user",:action=>"destroy", :id=> t.id }, {:method => :delete,:class=>"btn btn-danger",:data => {:confirm => 'Are you sure?'}} %></td>
        </tr>
    <% end %>
</table>


<%= paginate @users %>

<% end %>
 
<%= link_to "New user", new_admin_user_path %>